<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head", {title: pagesData[currentPage].displayName }) %>
</head>

<body>
    <!-- Header -->
    <%- include("../partials/header", { pagesData: pagesData }) %>
        <!-- Simple Main Page -->
        <div class="container-fluid d-flex flex-column justify-content-center align-items-center" full-height>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Login</h4>
                    <form action="/login/process" method="POST">
                        <div class="mb-6">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" id="username" name="username" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="Password" name="password" class="form-control">
                        </div>
                        <div class="d-flex flex-row-reverse">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Footer --->
        <%- include("../partials/footer", {pagesData: pagesData}) %>
</body>

</html>